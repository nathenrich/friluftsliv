{
  "name": "friluftsliv",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/nathenrich/friluftsliv"
  },
  "main": "lib/scripts/app.coffee",
  "scripts": {
    "build": "npm run build:scripts && npm run build:styles",
    "build:styles": "compass compile --import-path=node_modules --sass-dir=lib/styles --css-dir=dist/ lib/styles/course-runtime*.sass",
    "build:scripts": "browserify lib/scripts/runtime.coffee --extension=.coffee --extension=.mustache --extension=.jade --standalone CourseRuntime | uglifyjs --screw-ie8 > dist/course-runtime.js",
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean && mkdir -p dist",
    "prewatch": "npm run clean && mkdir -p dist",
    "serve": "nodemon --watch demo demo/server.coffee",
    "start": "parallelshell 'npm run watch:scripts' 'npm run watch:styles' 'npm run serve'",
    "test": "./node_modules/karma/bin/karma start --single-run --browsers PhantomJS --reporters dots",
    "test:watch": "./node_modules/karma/bin/karma start",
    "watch": "parallelshell 'npm run watch:scripts' 'npm run watch:styles'",
    "watch:styles": "compass watch --import-path=node_modules --sass-dir=lib/styles --css-dir=dist/ lib/styles/course-runtime*.sass",
    "watch:scripts": "watchify lib/scripts/runtime.coffee -d -v --extension=.coffee --extension=.mustache --extension=.jade --standalone CourseRuntime -o dist/course-runtime.js"
  },
  "browserify": {
    "transform": [
      "coffeeify",
      "jadeify",
      "hoganify"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "backbone": "~1.1.2",
    "backbone-relational": "^0.9.0",
    "backbone.stickit": "^0.8.0",
    "browser-sync": "1.9.1",
    "coffee-script": "^1.9.0",
    "coffeeify": "^1.0.0",
    "compression": "^1.4.0",
    "connect-browser-sync": "^1.0.2",
    "easing-js": "^1.0.0",
    "express": "^4.12.4",
    "hogan.js": "3.0.2",
    "hoganify": "^0.2.0",
    "jade": "^1.9.2",
    "jadeify": "^4.1.0",
    "jasmine-core": "^2.3.4",
    "jasmine-jquery": "2.0.6",
    "jquery": "^2.1.3",
    "jquery.cookie": "^1.4.1",
    "jvent": "^0.2.0",
    "karma": "0.12.31",
    "karma-browserify": "^4.0.0",
    "karma-chrome-launcher": "^0.1.7",
    "karma-growl-notifications-reporter": "0.0.2",
    "karma-jasmine": "^0.3.5",
    "karma-jasmine-html-reporter": "^0.1.8",
    "karma-mocha-reporter": "^1.0.2",
    "karma-phantomjs-launcher": "^0.1.4",
    "lodash": "^3.5.0",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.0.4",
    "polyfill-function-prototype-bind": "0.0.1",
    "rise-frontend": "git+https://fb11a4c2e6cb15e2b462419959a1baa84ca14f6c@github.com/articulate/rise-frontend.git#v0.23.0",
    "slang": "^0.3.0",
    "uglify-js": "^2.4.16",
    "video-runtime": "git+https://fb11a4c2e6cb15e2b462419959a1baa84ca14f6c@github.com/articulate/video-runtime.git#v0.0.3",
    "watchify": "^2.4.0"
  }
}
